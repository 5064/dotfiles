set number relativenumber

set nowritebackup
set nobackup
set noswapfile

" Tabs ============================================= 

set smarttab
" Tab文字を半角スペースにする
set expandtab
" 行頭以外のTab文字の表示幅（スペースいくつ分）
set tabstop=4
" 行頭でのTab文字の表示幅
set shiftwidth=4
set autoindent smartindent

" Search =========================================== 
set ignorecase
set incsearch
set wrapscan
